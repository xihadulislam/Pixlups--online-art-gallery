<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".EditPaymentMethodActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/liner21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login2"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:padding="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Select Your Payment Method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RadioGroup
            android:id="@+id/buttongroup"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/bkashId"
                android:layout_marginRight="20dp"
                android:text="Bkash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RadioButton
                android:id="@+id/rocketId"
                android:text="Rocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner21"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Account Numner"
            android:textAllCaps="false"

            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/editDesId2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg2"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner22">

        <Button
            android:background="#F14712"
            android:id="@+id/cancelButtonId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:textColor="#ffffff" />

        <Button
            android:background="#33C93A"
            android:id="@+id/saveButtonId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="Save"
            android:textColor="#ffffff" />


    </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

